{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../backend/src/shared/**/*.ts" // Add this line to include shared types
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
